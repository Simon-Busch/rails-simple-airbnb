<div class="container">
  <div class="row">
      <%= render 'header'%>
  </div>
  <div class="row">
    <h2>All our Flats (<%= @flats.count%>)</h2>
  </div>
  <div class="row row-flat">
  <% @flats.each do |flat| %>
      <div class="col-4 flat-card">
        <div class="flat-card-image">
          <%= image_tag flat['url'], alt: flat['name'], class: 'card-image' %>
        </div>
        <div class="flat-card-content">
          <div class="flat-card-title">
            <p> <%= flat.name%> </p>
          </div>
          <p><%=flat.description%></p>
          <div class="flex flat-card-info">
            <div class="flex">
              <i class="fas fa-user-friends"></i>
              <span><%= flat.number_of_guests%></span>
              <i class="fas fa-dollar-sign"></i>
              <span><%= flat.price_per_night%></span>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
        <%= link_to  "Details", flat_path(flat), class:"btn btn-success"%>
        <%= link_to  "Edit", edit_flat_path(flat), class:"btn btn-primary" %>
        <%= link_to  "ðŸš«", flat_path(flat.id), method: :delete, data: {confirm: 'Do you want to delete this post ?'}%>
        </div>
      </div>
    <%end%>
  </div>
</div>
