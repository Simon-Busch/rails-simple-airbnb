<div class="container">
  <div class="row">
      <%= render 'header'%>
  </div>

  <div class="row">
  <%= image_tag @flat['url'], alt: @flat['name'], class: 'card-image-vue' %>
  <%= link_to  "Edit", edit_flat_path, class:"btn btn-primary btn-floating" %>
  </div>
  <div class="container flat">
    <div class="row flat_description">
      <h4><%= @flat.name%></h4>
      <p><%= @flat.address%></p>
      <h5>A bit more about this flat :</h5>
      <p><%= @flat.description%></p>
    </div>

    <div class="row flat_description">
        <h5>Details</h5>
        <div class="flex flat-card-info">
          <div class="flex">
            <div class="mini-social">
              <i class="fas fa-user-friends"></i>
              <span><%= @flat.number_of_guests%></span>
              <i class="fas fa-dollar-sign"></i>
              <span><%= @flat.price_per_night%></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="social">
      <ul class="list">
        <li><i class="fab fa-facebook-messenger"></i></li>
        <li><i class="fab fa-twitter"></i></li>
      </ul>
    </div>

    <button class="btn btn-success button_show">Book now !</button>
  </div>
</div>

  <%= link_to  "Back", flats_path, class:"btn btn-primary button_show " %>